.container
  = render partial: 'shared/header'
  .row
    .span6
      = form_for @user, html:{class: 'form-horizontal well'} do |u|
        %h3 Nova conta
        .control-group
          .control-label
            Email
          .controls
            = u.text_field :email

        .control-group
          .control-label
            Senha
          .controls
            = u.password_field :password

        .control-group
          .controls
            = u.submit 'Cadastrar', class: 'btn btn-success'

        - if @user.errors.any?
          .alert.alert-block
            %button{:type=>'button', :class=>'close', :data=>{:dismiss=>'alert'}} &times;
            %h3 Seu cadastro cont√©m erro(s)!
            %ul
              - @user.errors.each do |error, message|
                %li= message



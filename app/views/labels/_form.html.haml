= form_for @label, html:{class: 'form-horizontal'} do |l|
  .control-group
    = l.label :name, 'Nome', class: 'control-label'
    .controls
      = l.text_field :name

  .control-group
    .controls
      = l.submit 'Salvar', class: 'btn btn-success'

  - if @label.errors.any?
    .alert.alert-block
      %button{:type=>'button', :class=>'close', :data=>{:dismiss=>'alert'}} &times;
      %h3 Erro ao salvar!
      %ul
        - @label.errors.each do |error, message|
          %li= message